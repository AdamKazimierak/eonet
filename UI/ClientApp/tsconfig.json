{
  "compilerOptions": {
    "importHelpers": true,
    "target": "es5",
    "jsx": "react-jsx",
    "module": "ESNext",
    "lib": ["DOM", "ES2021"],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "moduleResolution": "Node",
    "removeComments": false,
    "noImplicitThis": false,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "compileOnSave": false,
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "node_modules"
  ]
}